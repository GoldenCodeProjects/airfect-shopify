{{ 'section-category-banner.css' | asset_url | stylesheet_tag }}

<script src="{{ 'component-view-as.js' | asset_url }}" defer=defer></script>

{% if section.settings.banner != blank %}
  {{ section.settings.banner | image_url: width: 2048 | image_tag }}
{%- else -%}
  {{ 'collection-1' | placeholder_svg_tag }}
{% endif %}

<div class="text">
  <div class="filters">
    <button view="filters">
      Filtrar
      {% render 'component-icon' icon: 'arrow', icon_size: 25 %}
    </button>

    <view-as class="view-as">
      <button view="list">
        {% render 'component-icon' icon: 'list', icon_size: 25 %}
      </button>
      <button view="grid">
        {% render 'component-icon' icon: 'grid', icon_size: 25 %}
      </button>
    </view-as>
  </div>

  {%- if collection.handle == 'all' -%}
    <h2>Todos los productos</h2>
  {%- else -%}
    <h2>
      {% if collection.all_products_count != 0 %}
        <span id="products-count">{{ collection.all_products_count }}</span> productos en <span></span>
      {% endif %}
      {{ collection.title }}
    </h2>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Banner de Categoría",
  "tag": "section",
  "class": "section--category-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner",
      "label": "Banner"
    }
  ],
  "presets": [
    {
      "name": "Banner de Categoría"
    }
  ]
}
{% endschema %}

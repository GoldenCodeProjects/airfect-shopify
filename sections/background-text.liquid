{{ 'section-background-text.css' | asset_url | stylesheet_tag }}

<div class="bg">
  <img src="{{ section.settings.background_image | image_url: width: 1920 }}"
  alt="{{ section.settings.background_image.alt }}" width="1920" height="1080">

  <div class="text o-container -wide">
    <h2>{{ section.settings.heading }}</h2>
    {{ section.settings.body }}
    {%- if section.settings.button_url != blank and section.settings.button_text != blank-%}
      <a href="{{ section.settings.button_url }}" class="c-button -light -filled">
        <span>{{ section.settings.button_text }}</span>
        <span>{%- render 'component-icon' icon: 'arrow', icon_size: 22 -%}</span>
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Texto con fondo",
  "tag": "section",
  "class": "section--background-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagen de fondo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titulo"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Cuerpo del contenido"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del boton"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Url del boton"
    }
  ],
  "presets": [
    {
      "name": "Texto con fondo"
    }
  ]
}
{% endschema %}

{{ 'section-feadtured-collections.css' | asset_url | stylesheet_tag }}


{{ 'component-collection-card.css' | asset_url | stylesheet_tag }}

{{ 'component-cards.css' | asset_url | stylesheet_tag }}
<script src="{{ 'component-cards.js' | asset_url }}" defer></script>

<h2 class="section-title">
  {{ section.settings.heading }}
</h2>

<div class="collections o-container -wide">
  <component-cards>
    <div class="swiper">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- if block.settings.collection != blank -%}
            <div class="swiper-slide" data-swiper-parallax-y="0%">
              {%- render 'component-collection-card' collection: block.settings.collection -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
    <div class="swiper-button swiper-button-prev"></div>
    <div class="swiper-button swiper-button-next"></div>
  </component-cards>
</div>


{% schema %}
  {
    "name": "Catalogos destacados",
    "tag": "section",
    "class": "section--featured-collections",
    "blocks": [
      {
        "type": "collections",
        "name": "Catalogos destacados",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Selecciona un catalogo"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Titulo",
        "default": "MÃ¡s vendidos"
      }
    ],
    "presets": [
      {
        "name": "Catalogos destacados"
      }
    ]
  }
{% endschema %}

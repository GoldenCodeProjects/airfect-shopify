{{ 'section-main-reset-password.css' | asset_url | stylesheet_tag }}

<div class="reset-password u-pv-large o-container -medium -narrow">
  {%- form 'reset_customer_password' -%}
    <h1 class="c-heading -h3">Restablecer contraseña</h1>

    {{ form.errors | default_errors }}

    <div class="c-field">
      <input
        class="c-field_input"
        type="password"
        name="customer[password]"
        id="password"
        placeholder="Contraseña"
      >
      <label class="c-field_label" for="password">Contraseña</label>
    </div>

    <div class="c-field">
      <input
        class="c-field_input"
        type="password"
        name="customer[password_confirmation]"
        id="password_confirmation"
        placeholder="Contraseña"
      >
      <label class="c-field_label" for="password_confirmation">Confirmar contraseña</label>
    </div>

    <button class="c-button -primary">
      <span>Restablecer contraseña</span>
    </button>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "t:sections.reset_password.name",
  "tag": "section",
  "settings": []
}
{% endschema %}

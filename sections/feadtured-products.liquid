{{ 'component-cards.css' | asset_url | stylesheet_tag }}
{{ 'component-product-card.css' | asset_url | stylesheet_tag }}
{{ 'section-feadtured-products.css' | asset_url | stylesheet_tag }}

<script src="{{ 'component-cards.js' | asset_url }}" defer></script>

<h2>{{ section.settings.heading }}</h2>

<div class="products">
  <component-cards>
    <div class="swiper">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- if block.settings.product_selected != blank -%}
            <div class="swiper-slide" data-swiper-parallax-y="0%">
              {%- render 'component-product-card' product: block.settings.product_selected -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </component-cards>

</div>


{% schema %}
{
  "name": "Productos destacados",
  "tag": "section",
  "class": "section--featured-products",
  "blocks": [
    {
      "type": "products",
      "name": "Productos destacados",
      "settings": [
        {
          "type": "product",
          "id": "product_selected",
          "label": "Selecciona un producto"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titulo",
      "default": "MÃ¡s vendidos"
    }
  ],
  "presets": [
    {
      "name": "Productos destacados"
    }
  ]
}
{% endschema %}
